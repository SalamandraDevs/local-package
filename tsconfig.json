{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true, // Automatic types declarations of .d.ts files
    "declarationMap": false,
    "declarationDir": "./types",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "esm": true // ES6 modules support
  }
}
